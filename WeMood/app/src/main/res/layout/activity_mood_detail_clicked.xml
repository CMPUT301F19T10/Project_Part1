<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mood_detail_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoodDetailClicked"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friend_mood_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arbutus"
            android:text="username"
            android:textColor="#64FFDA"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="right">
        </LinearLayout>

        <ImageView
            android:id="@+id/friend_mood_state"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_weight="0.1">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/friend_mood_photo"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/friend_mood_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/artifika"
            android:padding="10dp"
            android:text="I am Happy!"
            android:textColor="#000000"
            android:textSize="30sp">

        </TextView>

        <TextView
            android:id="@+id/friend_mood_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/annie_use_your_telescope"
            android:padding="10dp"
            android:text="Here to display reasons"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/friend_mood_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="2019-05-09"
                android:textColor="#000000"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:id="@+id/friend_mood_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="19:00"
                android:textColor="#000000"
                android:textSize="20sp">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/friend_mood_social_situation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allan_bold"
            android:padding="10dp"
            android:text="Alone"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/friend_mood_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allan_bold"
            android:padding="10dp"
            android:text="here shows locations"
            android:textColor="#000000">

        </TextView>


    </LinearLayout>


</LinearLayout>